@model List<CheeseMVC.Models.Cheese>

<h1>Cheeses</h1>

@if (Model.Count == 0)
{
    <p>There is no cheese!</p>
}
<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>

@if (Model.Count > 0)
{
    <form method="post" action="/Cheese/Remove">
        @foreach (var cheese in Model)
        {
        <p>
            <input type="checkbox" name="cheeseIds" id="@cheese.ID" value="@cheese.ID">
            &nbsp;
            @cheese.Rating
            &nbsp;
            <b>@cheese.Name:</b>
            (@cheese.Category.Name)
            &nbsp;
            <i>@cheese.Description</i>
            &nbsp;
            <a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.ID">Edit</a>
        </p>
        }
            <p>
                <input type="submit" value="Remove" />
            </p>
    </form>
}