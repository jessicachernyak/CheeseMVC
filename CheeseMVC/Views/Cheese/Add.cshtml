@model CheeseMVC.ViewModels.AddCheeseViewModel

<h1>Add Cheese</h1>
<form asp-controller="Cheese" asp-action="Add" method="post">
    <div>
        <div>
            <label asp-for="CategoryID"></label>
            <select asp-for="CategoryID" asp-items="Model.Categories"></select>
        </div>
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" style="color: red"></span>
        <p><input asp-for="Name" /></p>
        <br />
    </div>
    <div>
        <label asp-for="Description"></label>
        <span asp-validation-for="Description" style="color: red"></span>
        <p><textarea asp-for="Description"></textarea></p>
        <br />
    </div>
    <div>
        <label asp-for="Rating"></label>
        <p><input asp-for="Rating" /></p>
    </div>
    <p><input type="submit" value="Add" /></p>
</form>